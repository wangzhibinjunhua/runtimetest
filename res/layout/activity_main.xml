<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Run-in"
        android:textSize="72sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_sw_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Test_tplink_v12_20190225"
        android:textSize="20sp" />
    
     <View
        android:layout_width="fill_parent"
        android:layout_height="40dp" />
     
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_ram_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="26sp"
            android:text="RAM:" />
        
        <TextView
            android:id="@+id/tv_ram_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="26sp"
            android:text="3G" />
        </LinearLayout>
        
         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_rom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="26sp"
            android:text="ROM:" />
        
        <TextView
            android:id="@+id/tv_rom_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="26sp"
            android:text="32G" />
        </LinearLayout>
        
          <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_flag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="26sp"
            android:text="FLAG:" />
        
        <TextView
            android:id="@+id/tv_flag_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="26sp"
            android:text="PASS" />
        </LinearLayout>
      <View
        android:layout_width="fill_parent"
        android:layout_height="40dp" />
     
      
      <Button
          android:id="@+id/btn_start"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:text="Start"
          android:textSize="42sp"
          />

</LinearLayout>