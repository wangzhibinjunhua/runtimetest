<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_item_detail"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cb_setting_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:visibility="visible" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_item_detail_count"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="Count"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/setting_item_detail_count_value"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:visibility="gone"
            />
    </LinearLayout>
    


     <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:visibility="visible" />
     
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_item_detail_time"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:text="Time"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/setting_item_detail_time_value"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:visibility="gone"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:visibility="visible" />
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setting_item_detail_other"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/setting_item_detail_other_value"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:visibility="gone"
            />
    </LinearLayout>
     

</LinearLayout>